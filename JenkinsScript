pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the main branch
                git branch: 'main', url: 'https://github.com/CodeSnake-wq/SIT223_6.2hd.git'
            }
        }
        stage('Build') {
            steps {
                // Build the Docker image
                script {
                    dockerImage = docker.build("react-app:latest")
                }
            }
        }
        stage('Push Image') {
            steps {
                // Push Docker image to a registry (if youre using one, like DockerHub)
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }
}
