pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('Build') {
            steps {
                // Checkout the repository
                git branch: 'main', url:'https://github.com/CodeSnake-wq/SIT223_6.2hd.git'
                
                // Install npm dependencies
                bat 'npm install'
            }
        }
    }
}
