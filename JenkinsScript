pipeline {
    agent any

    environment {
        DIRECTORY_PATH = 'C:/ProgramData/Jenkins/.jenkins/workspace/Task_6.2HD'
    }

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Checkout') {
            steps {
                script {
                    git url: 'https://github.com/CodeSnake-wq/SIT223_6.2hd.git', branch: 'main'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the Docker image
                    def app = docker.build("react-app:latest", "${DIRECTORY_PATH}")
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'docker run react-app:latest npm install'
                }
            }
        }

        stage('Build React Application') {
            steps {
                script {
                    sh 'docker run react-app:latest npm run build'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
